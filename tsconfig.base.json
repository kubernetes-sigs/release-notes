{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@env/*": ["./src/environments/*"],
      "@shared/*": ["src/app/shared/*"]
    },
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
